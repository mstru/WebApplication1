@model WebApplication1.Code.Models.Base.PaymentOrderModel

@{
    ViewBag.Title = "CreatePaymentOrder";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="width:1000px; margin:0 auto;">
        <div class="container">
            <div class="form-horizontal">
                <h2>Nová transkacia - vklad alebo výber</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ClientId, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.DropDownList("ClientId", WebApplication1.Code.Models.Utilities.GetClients(), "Výber zo zoznamu", new { style = "width:500px"})
                    @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TransType, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.RadioButtonFor(model => model.TransType, "Vklad") Vklad hotovosti
                    @Html.ValidationMessageFor(model => model.TransType, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TransType, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.RadioButtonFor(model => model.TransType, "Výber") Výber hotovosti
                    @Html.ValidationMessageFor(model => model.TransType, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TransAmount, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TransAmount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TransAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="width:1000px; margin:0 auto;">
        <p />
        <button type="submit" class="btn btn-default">Vytvoriť</button> |
        @Html.ActionLink("Naspať na zoznam", "Index")
        <p />
        <div class="message">@ViewBag.Message</div>
    </div>
}