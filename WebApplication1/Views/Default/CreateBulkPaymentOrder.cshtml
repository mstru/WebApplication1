@model WebApplication1.Code.Models.Base.BulkPaymentOrderModel


@{
    ViewBag.Title = "CreateBulkPaymentOrder";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="width:1000px; margin:0 auto;">
        <div class="container">
            <div class="form-horizontal">
                <h2>Nová transakcia - prevod</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ClientIDSender, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ClientIDSender", WebApplication1.Code.Models.Utilities.GetClients(), "Výber zo zoznamu", new { style = "width:500px" })
                        @Html.ValidationMessageFor(model => model.ClientIDSender, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ClientIDRecipient, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ClientIDRecipient", WebApplication1.Code.Models.Utilities.GetClients(), "Výber zo zoznamu", new { style = "width:500px" })
                        @Html.ValidationMessageFor(model => model.ClientIDRecipient, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TransAmount, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TransAmount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TransAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="width:1000px; margin:0 auto;">
        <p />
        <button type="submit" class="btn btn-default">Vytvoriť</button> |
        @Html.ActionLink("Naspať na zoznam", "Index")
        <p />
        <div class="message">@ViewBag.Message</div>
    </div>
}

